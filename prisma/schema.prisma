generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model QuestionDefinition {
  id        String   @id @default(uuid())
  label     String
  type      String
  options   Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  responses QuestionResponse[]
}

model FormType {
  id          Int               @id @default(autoincrement())
  key         String            @unique
  label       String
  submissions FormSubmission[]
}

model FormSubmission {
  id        String   @id @default(uuid())
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  formTypeId Int          @map("form_type_id")
  formType   FormType     @relation(fields: [formTypeId], references: [id])
  responses  QuestionResponse[]
}

model QuestionResponse {
  id           String   @id @default(uuid())
  questionId   String
  submissionId String
  value        Json?
  question     QuestionDefinition @relation(fields: [questionId], references: [id])
  submission   FormSubmission     @relation(fields: [submissionId], references: [id])

  @@index([questionId])
  @@index([submissionId])
}
